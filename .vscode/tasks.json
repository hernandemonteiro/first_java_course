{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Java",
      "type": "shell",
      "command": "javac",
      "args": ["-d", "bin", "src/App.java"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$javac"
    },
    {
      "label": "Run Java",
      "type": "shell",
      "command": "java",
      "args": ["-cp", "bin", "App"],
      "dependsOn": "Compile Java",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
